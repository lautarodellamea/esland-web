---
import { CountUp } from './CountApp'
import NumerosItem from './NumerosItem.astro'
---

<section class='max-w-6xl mx-auto py-20 px-20'>
  <h2
    class='text-4xl lg:text-6xl font-tomaso text-center text-balance mb-10 lg:mb-20'
  >
    LOS ESLAND EN NÚMEROS
  </h2>
  <div class='grid grid-cols-1 lg:grid-cols-3 gap-y-10'>
    <NumerosItem title='NOTICIAS EN PRENSA'>
      <CountUp client:visible initial={0} final={69.9} decimals={1} />M
    </NumerosItem>
    <NumerosItem title='DE VISUALIZACIONES'>
      <CountUp client:visible initial={0} final={227} />
    </NumerosItem>
    <NumerosItem title='EN MEDIOS GANADOS'>
      <CountUp client:visible initial={0} final={3.2} decimals={1} />M€
    </NumerosItem>
  </div>
</section>
